install.packages("mgcv")
install.packages(c("tidyverse", "devtools"))
install.packages(c("metafor", "IRTShiny"))
# Demo: horsey (analysis/export-only)
# Prereq: set your token in the environment (recommended)
# Sys.setenv(LICHESS_TOKEN = "lip_...")
library(horsey)
# Demo: horsey (analysis/export-only)
# Prereq: set your token in the environment (recommended)
# Sys.setenv(LICHESS_TOKEN = "lip_...")
library(horsey)
# 1) Create client (uses Sys.getenv("LICHESS_TOKEN") automatically)
cl <- client()
print(cl)
# 2) Pull user profile + rating history
u  <- user(cl, "TacoCat24601")
rh <- rating_history(cl, "TacoCat24601")
print(u)
print(head(rh, 10))
# 3) Export recent games (NDJSON -> tibble)
g <- export_games(cl, "TacoCat24601", max = 100, opening = TRUE)
# 4) Quick analysis
print(result_summary(g, player = "TacoCat24601"))
print(winrate(g, player = "TacoCat24601"))
print(opening_summary(g, top_n = 10))
# 5) Optional: export PGN to a local file
# export_games_pgn(cl, "DrVulpes", out_file = "dr_vulpes_recent.pgn", max = 50)
